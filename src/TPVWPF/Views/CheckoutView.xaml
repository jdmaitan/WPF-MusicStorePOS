<UserControl x:Class="TPVWPF.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TPVWPF.Views"
             xmlns:converters="clr-namespace:TPVWPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <UserControl.Resources>
        <converters:CartItemDisplayConverter x:Key="CartItemDisplayConverter" />

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="Foreground"
                    Value="#333333" />
            <Setter Property="Margin"
                    Value="0 0 0 5" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="Margin"
                    Value="0 5 0 0" />
            <Setter Property="BorderBrush"
                    Value="#CCCCCC" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="MinWidth"
                    Value="200" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin"
                    Value="0 5 0 0" />
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="BorderBrush"
                    Value="#CCCCCC" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="MinWidth"
                    Value="200" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="12 6" />
            <Setter Property="MinWidth"
                    Value="150" />
            <Setter Property="FontFamily"
                    Value="Segoe UI Semibold" />
            <Setter Property="Background"
                    Value="#FF4285F4" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Margin"
                    Value="0 15 0 0" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF3367D6" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF2A56B7" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeader"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Margin"
                    Value="0 20 0 10" />
        </Style>

        <Style x:Key="OrderItemText"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Margin"
                    Value="0 3" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <Style x:Key="TotalText"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize"
                    Value="18" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#FF4285F4" />
        </Style>
    </UserControl.Resources>

    <Grid Background="White"
          Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=CheckoutViewTitle}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0 0 0 20"
                   Foreground="#333333" />

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="0 0 5 0">
            <StackPanel>
                <!-- Resumen del pedido -->
                <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=OrderSummaryLabel}"
                           Style="{StaticResource SectionHeader}" />

                <Border BorderBrush="#EEEEEE"
                        BorderThickness="0 0 0 1"
                        Padding="0 0 0 10"
                        Margin="0 0 0 10">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Style="{StaticResource OrderItemText}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource CartItemDisplayConverter}">
                                            <Binding Path="Product.Name" />
                                            <Binding Path="Quantity" />
                                            <Binding Path="Subtotal" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Detalles de cliente -->
                <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=CustomerDetailsLabel}"
                           Style="{StaticResource SectionHeader}" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=FirstNameLabel}"
                               Width="120"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding CustomerFirstName}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 10 0 0">
                    <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=LastNameLabel}"
                               Width="120"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding CustomerLastName}" />
                </StackPanel>

                <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=AddressLabel}"
                           Margin="0 10 0 5" />
                <TextBox Text="{Binding CustomerAddress}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="80" />

                <!-- Método de pago -->
                <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=PaymentMethodLabel}"
                           Style="{StaticResource SectionHeader}" />
                <ComboBox ItemsSource="{Binding PaymentMethods}"
                          SelectedItem="{Binding SelectedPaymentMethod}" />

                <!-- Total -->
                <TextBlock Text="{Binding FormattedTotal}"
                           Style="{StaticResource TotalText}"
                           HorizontalAlignment="Right"
                           Margin="0 20 10 0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Botón para finalizar compra -->
        <Button Grid.Row="2"
                Content="{Binding Source={StaticResource LocalizationService}, Path=FinalizePurchaseButtonText}"
                Command="{Binding FinalizeOrderCommand}"
                HorizontalAlignment="Right"
                Margin="0 20 0 0" />
    </Grid>
</UserControl>