<UserControl x:Class="TPVWPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TPVWPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="250"
             d:DesignWidth="400">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="Foreground"
                    Value="#333333" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="Margin"
                    Value="20 15 10 5" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="0" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin"
                    Value="10 15 20 5" />
            <Setter Property="Padding"
                    Value="8" />
            <Setter Property="BorderBrush"
                    Value="#CCCCCC" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="MinWidth"
                    Value="150" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="12 8" />
            <Setter Property="MinWidth"
                    Value="120" />
            <Setter Property="FontFamily"
                    Value="Segoe UI Semibold" />
            <Setter Property="Background"
                    Value="#FF4285F4" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Margin"
                    Value="0 20 20 0" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF3367D6" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF2A56B7" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsHeader"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="22" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Margin"
                    Value="20 20 20 30" />
            <Setter Property="Foreground"
                    Value="#333333" />
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Text="{Binding Source={StaticResource LocalizationService}, Path=SettingsViewTitle}"
                   Style="{StaticResource SettingsHeader}"
                   Grid.ColumnSpan="2" />

        <!-- Selección de idioma -->
        <Label Content="{Binding Source={StaticResource LocalizationService}, Path=LanguageLabelSettings}"
               Grid.Row="1" />
        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                  SelectedValue="{Binding SelectedLanguage}"
                  SelectedValuePath="Code"
                  DisplayMemberPath="Name"
                  Grid.Row="1"
                  Grid.Column="1" />

        <!-- Botón de guardar-->
        <Button Content="{Binding Source={StaticResource LocalizationService}, Path=SaveButtonTextSettings}"
                Command="{Binding SaveLanguageCommand}"
                HorizontalAlignment="Right"
                Grid.Row="3"
                Grid.ColumnSpan="2" />
    </Grid>
</UserControl>