<UserControl x:Class="TPVWPF.Views.ProductDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TPVWPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="600">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="Foreground"
                    Value="#333333" />
            <Setter Property="Margin"
                    Value="0 8" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="15 10" />
            <Setter Property="MinWidth"
                    Value="150" />
            <Setter Property="FontFamily"
                    Value="Segoe UI Semibold" />
            <Setter Property="Background"
                    Value="#FF4285F4" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Margin"
                    Value="0 20 0 0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF3367D6" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF2A56B7" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelText"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Margin"
                    Value="0 8 15 8" />
            <Setter Property="VerticalAlignment"
                    Value="Top" />
        </Style>

        <Style x:Key="ProductName"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize"
                    Value="24" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Margin"
                    Value="0 0 0 20" />
            <Setter Property="Foreground"
                    Value="#1A73E8" />
        </Style>

        <Style x:Key="DescriptionText"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="Margin"
                    Value="0 8 0 20" />
            <Setter Property="LineHeight"
                    Value="24" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <Style x:Key="PriceText"
               TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize"
                    Value="18" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#1A73E8" />
        </Style>
    </UserControl.Resources>

    <Grid Background="White"
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Nombre de producto -->
        <TextBlock Text="{Binding Product.Name}"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="20 15"
                   Foreground="#333333"
                   Style="{StaticResource ProductName}" />

        <!-- Precio -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="{Binding Source={StaticResource LocalizationService}, Path=ProductDetailPriceLabel}"
                   Style="{StaticResource LabelText}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding Product.Price, StringFormat=C2}"
                   Style="{StaticResource PriceText}" />

        <!-- Categoría -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="{Binding Source={StaticResource LocalizationService}, Path=ProductDetailCategoryLabel}"
                   Style="{StaticResource LabelText}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Text="{Binding Product.Category}" />

        <!-- Descripción -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="{Binding Source={StaticResource LocalizationService}, Path=ProductDetailDescriptionLabel}"
                   Style="{StaticResource LabelText}" />

        <TextBlock Grid.Row="4"
                   Grid.ColumnSpan="2"
                   Text="{Binding Product.Description}"
                   Style="{StaticResource DescriptionText}" />

        <!-- Botón de añadir al carrito -->
        <Button Grid.Row="6"
                Grid.ColumnSpan="2"
                Content="{Binding Source={StaticResource LocalizationService}, Path=AddToCartButtonTextDetail}"
                Command="{Binding AddToCartCommand}"
                CommandParameter="{Binding Product}"
                HorizontalAlignment="Right" />
    </Grid>
</UserControl>